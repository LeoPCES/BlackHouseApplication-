@model Agendamento;

<div class="col-sm-4 col-md-4 col-lg-4">
    <h1> @Model.ClienteNome</h1>

    <h5>Tipo de Atendimento: @Model.Servico.TipoServico</h5>
    <h5>Valor: @Model.Servico.PrecoServico.ToString("c")</h5>

    <p>Agendamento: @Model.DataAgendamento</p>
    <p>Contato: @Model.TelefoneCliente</p>

    <div>
        <form asp-area="Admin" asp-controller="AdminConferirAgendamentos" asp-action="Delete" method="post">
            <input type="hidden" asp-for="@Model.AgendamentoId" name="id" />
            <input type="submit" value="Deletar Agendamento" class="btn btn-danger" />
        </form>
    </div>
</div>