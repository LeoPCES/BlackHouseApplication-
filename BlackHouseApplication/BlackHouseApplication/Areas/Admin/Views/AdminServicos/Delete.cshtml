@model BlackHouseApplication.Models.Servico

@{
    ViewData["Title"] = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que você quer deletar este serviço?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoServico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoServico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoServico)
        </dt>
        <dd class = "col-sm-10">
            R$@Html.DisplayFor(model => model.PrecoServico)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ServicoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-dark">Voltar para Lista</a>
    </form>
</div>
